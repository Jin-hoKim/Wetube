extends layouts/main
block content
    h1 #{pageTitle}
    .form-container
        .record-container#jsRecordContainer
            video#jsVideoPreview
            button#jsRecordButton
                i.fas.fa-video
                span Start Recording
        form(action=`/videos${routes.videoUpload}`, method="post", enctype="multipart/form-data")
            .form-group
                label(for="file") Video File
                input(type="file", id="file", name="videoFile", required="true", accept="video/*")
            .form-group
                label(for="title") Video Title
                input(type="text", name="title", placeholder="Title")
            .form-group
                label(for="description") Description
                textarea(name="description", placeholder="Description")
            .form-container__buttons
                button.button-upload(type="submit")
                    i.fas.fa-upload
                    span Upload
