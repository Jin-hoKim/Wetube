extends layouts/main
block content
    h1 #{pageTitle}
    .form-container
        form(action=`/users${routes.userEditProfile}`, id="editForm" method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") Avatar
                input(type="file", id="avatar", name="avatar", accept="image/*")
            input(type="text", name="name", placeholder="Full Name", value=loggedUser.name)
            input(type="email", name="email", placeholder="Email", value=loggedUser.email)
            button.button-edit-profile(onclick='document.querySelector("#editForm").submit()')
                i.fas.fa-pencil-alt
                span Update Profile
