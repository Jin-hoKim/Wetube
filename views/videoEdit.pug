extends layouts/main
block content
    h1 #{pageTitle}
    .form-container
        form(action=`${routes.videoEdit(video.id)}`, method="post")
            input(type="text", name="title", value=video.title, placeholder="Title")
            textarea(name="description", placeholder="Description")=video.description
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--delete(href=`${routes.videoDelete(video.id)}`) Delete Video
