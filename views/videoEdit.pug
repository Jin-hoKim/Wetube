extends layouts/main
block content
    h1 #{pageTitle}
    .form-container
        form(action=`${routes.videoEdit(video.id)}`, method="post")
            .form-group
                label(for="title") Video Title
                input(type="text", name="title", value=video.title, placeholder="Title")
            .form-group
                label(for="description") Description
                textarea(name="description", placeholder="Description")=video.description
            .form-container__buttons
                button.button-edit
                    i.fas.fa-upload
                    span Update Video
                a.form-container__link(href=`${routes.videoDelete(video.id)}`) 
                    button.button-delete 
                        i.far.fa-trash-alt
                        span Delete Video
